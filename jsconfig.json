{
  "compilerOptions": {
    "rootDir": ".",
    "module": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "nodenext",
    "resolveJsonModule": false,
    "esModuleInterop": false,
    "checkJs": true,
    "skipLibCheck": false,
    "allowJs": true,
    "traceResolution": false
  },
  "include": ["*.js", "*.d.ts"]
}
